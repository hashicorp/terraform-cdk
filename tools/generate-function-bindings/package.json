{
  "name": "generate-function-bindings",
  "version": "0.0.0",
  "private": true,
  "description": "Tool to generate CDK for Terraform function bindings",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "watch-preserve-output": "tsc -w --preserveWatchOutput",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pretest": "yarn build",
    "pretest:ci": "yarn build",
    "test": "yarn lint && jest",
    "test:ci": "yarn lint && jest --ci",
    "jest-watch": "jest --watch",
    "package": "./package.sh",
    "dist-clean": "rm -rf dist",
    "fetch-metadata": "ts-node scripts/fetch-metadata.ts",
    "generate": "ts-node scripts/generate.ts"
  },
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/hashicorp/terraform-cdk.git",
    "directory": "tools/generate-function-bindings"
  },
  "author": {
    "name": "HashiCorp",
    "url": "https://hashicorp.com"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "cdktf": "0.0.0",
    "log4js": "^6.7.0"
  },
  "devDependencies": {
    "@babel/generator": "^7.20.4",
    "@babel/template": "^7.18.10",
    "@babel/types": "^7.20.2",
    "@cdktf/provider-generator": "0.0.0",
    "ts-node": "^10.9.1",
    "typescript": "5.4.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-var-requires": 0,
      "no-sequences": "error",
      "no-irregular-whitespace": [
        "error",
        {
          "skipTemplates": true
        }
      ]
    },
    "files": ["**/*.ts", "**/*.tsx"],
    "ignorePatterns": [
      "node_modules",
      "dist",
      "coverage"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": "tsc-files ambient.d.ts --noEmit"
  }
}
